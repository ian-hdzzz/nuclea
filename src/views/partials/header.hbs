<head>
    <link rel="stylesheet" href="/css/header.css">
    <meta name="csrf-token" content="{{ csrfToken }}">
</head>
<div class="navbar">
    <div class="view">
        <div class="icon-container"><i class="{{iconClass}}"></i></div>
        <h1>{{title}}</h1>
    </div>
    <div class="icons">
        <div class="notification-container">
            <a href="#" id="notification-bell" title="Notificaciones">
                <i class="fa-regular fa-bell"></i>
                <span class="notification-badge" id="notification-count" style="display: none;">0</span>
            </a>
            <!-- Dropdown de notificaciones -->
            <div class="notification-dropdown" id="notification-dropdown">
                <div class="notification-header">
                    <h3>Notificaciones</h3>
                    <button id="close-notifications"><i class="fa-solid fa-xmark"></i></button>
                </div>
                <div class="notification-list" id="notification-list">
                    <!-- Las notificaciones se cargarán dinámicamente aquí -->
                    <div class="notification-loading">Cargando notificaciones...</div>
                </div>
                <div class="notification-footer">
                    <button id="mark-all-read">Marcar todas como leídas</button>
                </div>
            </div>
        </div>
        <a href="/nuclea/profile" title="Profile"><i class="fa-solid fa-user"></i></a>
    </div>
</div>
