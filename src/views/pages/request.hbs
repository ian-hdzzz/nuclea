<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
  <link rel="stylesheet" href="/css/request.css" />
</head>
<body>
  <div class="top-container">
    <nav class="nav-bar">
      <div class="first-container">
        <div class="views">Views</div>
        <div class="search-container">
          <input type="text" placeholder="Search..." class="input-search" />
          <i class="fa-solid fa-magnifying-glass search-icon"></i>
        </div>
      </div>
      <div class="second-container">
        <div class="notification">
          <i class="fa-solid fa-bell"></i>
        </div>
        <div class="perfil">
          <i class="fa-solid fa-user"></i>
        </div>
      </div>
    </nav>
  </div>

  <div class="content">
    <!-- Encabezado con botón arriba -->
    <div class="nav-content">
      <h2>Absences Management</h2>
      <input type="button" value="Add Request" class="add-btn" id="openModal">
    </div>

    <!-- Tabla de datos -->
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>User ID</th>
          <th>Type</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Description</th>
          <th>Leader Approval</th>
          <th>Admin Approval</th>
        </tr>
      </thead>
      <tbody>
        {{#each datos}}
        <tr>
          <td>{{idSolicitud}}</td>
          <td>{{idUsuario}}</td>
          <td>{{Tipo}}</td>
          <td>{{formatDate Fecha_inicio}}</td>
          <td>{{formatDate Fecha_fin}}</td>
          <td>{{Descripcion}}</td>
          <td>
            <span class="{{#if (eq Aprobacion_L 'Aprobado')}}active{{else if (eq Aprobacion_L 'Rechazado')}}inactive{{else}}pending{{/if}}">
              {{Aprobacion_L}}
            </span>
          </td>
          <td>
            <span class="{{#if (eq Aprobacion_A 'Aprobado')}}active{{else if (eq Aprobacion_A 'Rechazado')}}inactive{{else}}pending{{/if}}">
              {{Aprobacion_A}}
            </span>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>

    <!-- Modal -->
    <div id="modal" class="modal hidden">
      <div class="modal-content">
        <button id="closeModal" class="close-btn">✖</button>
        <h2 class="title-modal">New Vacation Request</h2>
        <p class="description">Fill the form to create a request</p>
        <form method="POST" action="/nuclea/request">
          <input type="hidden" name="_csrf" value="{{csrfToken}}">
          <div class="form-group">
            <label for="idUsuario">User ID</label>
            <input type="number" id="idUsuario" name="idUsuario" placeholder="157" class="text-modal" required>
          </div>

          <div class="form-group">
            <label for="Tipo">Type</label>
            <input type="text" id="Tipo" name="Tipo" placeholder="Vacaciones" class="text-modal" required>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label for="Fecha_inicio">Start Date</label>
              <input type="date" id="Fecha_inicio" name="Fecha_inicio" class="text-modal" required>
            </div>
            <div class="form-group">
              <label for="Fecha_fin">End Date</label>
              <input type="date" id="Fecha_fin" name="Fecha_fin" class="text-modal" required>
            </div>
          </div>

          <div class="form-group">
            <label for="Descripcion">Description</label>
            <input type="text" id="Descripcion" name="Descripcion" placeholder="Spring Break" class="text-modal" required>
          </div>

          <input type="submit" class="btn-submit" value="Submit Request">
        </form>
      </div>
    </div>
  </div>

  <script src="/js/addRequest.js"></script>
</body>
</html>
