<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
  <link rel="stylesheet" href="/css/request.css" />
</head>
<body>
  <div class="top-container">
    <nav class="nav-bar">
      <div class="first-container">
        <div class="views">Views</div>
        <div class="search-container">
          <input type="text" placeholder="Search..." class="input-search" />
          <i class="fa-solid fa-magnifying-glass search-icon"></i>
        </div>
      </div>
      <div class="second-container">
        <div class="notification">
          <i class="fa-solid fa-bell"></i>
        </div>
        <div class="perfil">
          <i class="fa-solid fa-user"></i>
        </div>
      </div>
    </nav>
  </div>

  <div class="content">
    <div class="nav-content">
      <h2>Absences Management</h2>
    </div>

    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>User ID</th>
          <th>Type</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Description</th>
          <th>Leader Approval</th>
          <th>Admin Approval</th>
        </tr>
      </thead>
      <tbody>
        {{#each datos}}
        <tr>
          <td>{{idSolicitud}}</td>
          <td>{{idUsuario}}</td>
          <td>{{Tipo}}</td>
          <td>{{formatDate Fecha_inicio}}</td>
          <td>{{formatDate Fecha_fin}}</td>
          <td>{{Descripcion}}</td>
          <td>
            <span class="
              {{#if (eq Aprobacion_L 'Aprobado')}}active
              {{else if (eq Aprobacion_L 'Rechazado')}}inactive
              {{else}}pending{{/if}}">
              {{Aprobacion_L}}
            </span>
          </td>
          <td>
            <span class="
              {{#if (eq Aprobacion_A 'Aprobado')}}active
              {{else if (eq Aprobacion_A 'Rechazado')}}inactive
              {{else}}pending{{/if}}">
              {{Aprobacion_A}}
            </span>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</body>
</html>
