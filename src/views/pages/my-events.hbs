    <div class="stats">
    <div class="statistics-container">
        <!-- One-to-one Section -->
        <div class="category-card">
            <div class="category-header" data-category="oneToOne">
                <div class="category-info">
                    <span class="category-dot" style="background-color: #4285F4;"></span>
                    <span class="category-name">One-to-one</span>
                </div>
                <div class="category-count">
                    <span class="circle meeting">{{oneToOne.count}}</span>
                    <div class="dropdown-icons">
                        <i class="fa-solid fa-angle-down"></i>

                    </div>
                </div>
            </div>
            
            <div class="category-details collapsed">
                {{#if oneToOne.items.length}}
                    {{#each oneToOne.items}}
                        <div class="detail-item">
                            <div class="detail-name">{{name}}</div>
                            <div class="detail-info">
                                <div class="detail-date">{{date}}</div>
                                {{#if duration}}
                                    <div class="detail-duration">{{duration}}</div>
                                {{/if}}
                            </div>
                        </div>
                    {{/each}}
                {{else}}
                    <div class="detail-item no-events">
                        <div class="detail-name">No events scheduled</div>
                    </div>
                {{/if}}
            </div>
        </div>

        <!-- Vacations Section -->
        <div class="category-card">
            <div class="category-header" data-category="vacations">
                <div class="category-info">
                    <span class="category-dot" style="background-color: #9C27B0;"></span>
