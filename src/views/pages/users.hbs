<div id="modal-fa" class="modal">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">Add user</p>
      <button class="delete" aria-label="close"></button>
    </header>
    <section class="modal-card-body">
      <form action="/nuclea/users" id="form-user" method="POST">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <label for="name_us" class="label">Employee Names</label>
        <input
          class="input is-primary"
          type="text"
          placeholder="Names"
          id="name_us"
          name="name_us"
          required
        />
        <br><br>
        <label for="lastname_us" class="label">Last Name</label>
        <input
          class="input is-primary"
          type="text"
          placeholder="User Last Name"
          id="lastname_us"
          name="lastname_us"
          required
        />
        <br><br>
        <label for="email_us" class="label">Email</label>
        <input
          class="input is-primary"
          type="email"
          placeholder="example@nuclea.solutions"
          id="email_us"
          name="email_us"
          required
        />
        <br><br>
        <label for="country_us" class="label">Country</label>
        <input
          class="input is-primary"
          type="text"
          placeholder="Mexico"
          id="country_us"
          name="country_us"
          required
        />
        <label for="city_us" class="label">City</label>
        <input
          class="input is-primary"
          type="text"
          placeholder="example@nuclea.solutions"
          id="city_us"
          name="city_us"
          required
        />
        <label for="street_us" class="label">Street</label>
        <input
          class="input is-primary"
          type="text"
          placeholder="mexico city"
          id="street_us"
          name="street_us"
          required
        />
        <label for="model_us" class="label">Working Model</label>
          <div class="select is-primary">
            <select id="model_us" name="model_us">
                <option value="On-site">On-site work</option>
                <option value="Hybrid">Hybrid work</option>
                <option value="Remote">Remote work</option>
            </select>
          </div>
        <br><br>
        <label for="dias_vacaciones" class="label">Vacation Days</label>
        <input
          class="input is-primary"
          type="number"
          id="dias_vacaciones"
          name="dias_vacaciones"
          min="0"
          max="12"
          step="1"
          value="1"
        />
        <br><br>
        <label for="passw" class="label">Password</label>
        <input
          class="input is-primary"
          type="text"
          placeholder="password"
          id="passw"
          name="passw"
          value="{{tempPassword}}"
          readonly
        />
        <br><br>
        <label for="role" class="label">Select role:</label>
          <div class="select is-primary">
            <select id="role" name="role">
              {{#each rols}}
                <option value="{{idRol}}">{{Nombre_rol}}</option>
              {{/each}}
            </select>
          </div>
        <br><br>
        <label for="status_us" class="label">Status</label>
          <div class="select is-primary">
            <select id="status_us" name="status_us">
                <option value="1">Active</option>
                <option value="0">Not active</option>
            </select>
          </div>
        <br><br>
        <label for="start_date" class="label">Start Date</label>
        <input
          class="input is-primary"
          type="date"
          placeholder="dd/mm/yy"
          id="start_date"
          name="start_date"
          required
        />
        <br><br>
        <label for="end_date" class="label">End date</label>
        <input
          class="input is-primary"
          type="date"
          placeholder="can leave empty"
          id="end_date"
          name="end_date"
        />
    </form>
    </section>
    <footer class="modal-card-foot">
      <div class="buttons">
        <button form="form-user" type="submit" class="button is-success" value="Add user">Add user</button>
        <button class="button">Cancel</button>
      </div>
    </footer>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
  // Functions to open and close a modal
  function openModal($el) {
    $el.classList.add('is-active');
  }

  function closeModal($el) {
    $el.classList.remove('is-active');
  }

  function closeAllModals() {
    (document.querySelectorAll('.modal') || []).forEach(($modal) => {
      closeModal($modal);
    });
  }

  // Add a click event on buttons to open a specific modal
  (document.querySelectorAll('.js-modal-trigger') || []).forEach(($trigger) => {
    const modal = $trigger.dataset.target;
    const $target = document.getElementById(modal);

    $trigger.addEventListener('click', () => {
      openModal($target);
    });
  });

  // Add a click event on various child elements to close the parent modal
  (document.querySelectorAll('.modal-background, .modal-close, .modal-card-head .delete, .modal-card-foot .button') || []).forEach(($close) => {
    const $target = $close.closest('.modal');

    $close.addEventListener('click', () => {
      closeModal($target);
    });
  });

  // Add a keyboard event to close all modals
  document.addEventListener('keydown', (event) => {
    if(event.key === "Escape") {
      closeAllModals();
    }
  });
});
</script>