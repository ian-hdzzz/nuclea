            </thead>
            <tbody>
                {{#each usuarios}}
                <tr>
                    <td>{{Nombre}}</td>
                    <td>Dept despues</td>
                    <td>{{formatDate Fecha_inicio_colab}}</td>
                    <td>{{Modalidad}}</td>
                    <td>{{Ciudad}}</td>
