<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gráfica de prueba</title>
   <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
  <link rel="stylesheet" href="/css/reports.css">
</head>
<body>
  <div class="dashboard-container">
    <div class="chart-container">
      <canvas id="estadoUsuariosChart"></canvas>
    </div>
    
    <div class="info-panel">
      <div class="info-card info-card-1">
        <h3>Empleados activos e inactivos</h3>
        <div class="employee-counters">
          <div class="counter-box active-counter">
            <div class="counter-label">Empleados Activos</div>
            <div class="counter-number">{{reportsDetailsActive.cantidad}}</div>
          </div>
          <div class="counter-box inactive-counter">
            <div class="counter-label">Empleados Inactivos</div>
            <div class="counter-number">{{reportsDetailsInactive.cantidad}}</div>
        </div>
      </div>
      </div>
      
      <div class="info-card info-card-2">
        <h3>One-to-One</h3>
        <p>Distribución de personal por departamentos.</p>
      </div>
      
      <div class="info-card info-card-3">
        <h3>Faltas administrativas</h3>
        <p>Registro y seguimiento de incidencias administrativas.</p>
      </div>
      
      <div class="info-card info-card-4">
        <h3>Estadísticas generales</h3>
        <p>Resumen de indicadores clave de rendimiento.</p>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      // Estos valores serán reemplazados por tus datos reales
      const activos = {{{activosPorMes}}};
      const inactivos = {{{inactivosPorMes}}};
      
      new Chart("estadoUsuariosChart", {
        type: "bar",
        data: {
          labels: ["Ene", "Feb", "Mar", "Abr", "May", "Jun", "Jul", "Ago", "Sep", "Oct", "Nov", "Dic"],
          datasets: [
            {
              label: "Activos",
              backgroundColor: "#4CAF50",
              data: activos,
              borderRadius: 5,
              borderSkipped: false // Importante para que se redondeen todos los lados
            },
            {
              label: "Inactivos",
              backgroundColor: "#F44336",
              data: inactivos,
              borderRadius: 5,
              borderSkipped: false // Importante para que se redondeen todos los lados
            }
          ]
        },
        options: {
          responsive: true,
          maintainAspectRatio: true,
          plugins: {
            legend: {
              position: 'top',
              labels: {
                boxWidth: 12,
                usePointStyle: true,
                padding: 20
              }
            },
            title: {
              display: true,
              text: "Colaboradores Activos e Inactivos por Mes",
              font: {
                size: 15
              }
            }
          },
          scales: {
            y: {
              beginAtZero: true,
              grid: {
                color: 'rgba(0, 0, 0, 0.05)'
              }
            },
            x: {
              grid: {
                display: false
              }
            }
          },
          elements: {
            bar: {
              borderWidth: 1,
              borderRadius: {
                topLeft: 5,
                topRight: 5,
              },
              borderSkipped: false
            }
          }
        }
      });
    });
  </script>
</body>
</html>