<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gráfica de prueba</title>
   <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
   
   <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels"></script>

  <link rel="stylesheet" href="/css/reports.css">
</head>
<body>
    
  <div class="dashboard-container">
    <h1 class="title">HR Performance Analytics</h1>
    <p class="subtitle">Reports overview of human resources metrics</p>
    <div class="reports-container">


    <div class="graph-container">
      <canvas id="estadoUsuariosChart"></canvas>
    </div>
    

      <div class="info-card info-card-1">
        <h3>Active and Inactive collaborators</h3>
        <div class="employee-counters">
          <div class="counter-box active-counter">
            <div class="counter-label">Active Collaborators</div>
            <div class="counter-number">{{reportsDetailsActive.cantidad}}</div>
          </div>
          <div class="counter-box inactive-counter" href="/nuclea/unemployed">
            <div class="counter-label">
                <a href="/nuclea/unemployed" style="color: white ; text-decoration: underline;">
                Inactive Collaborators
                </a>
            </div>
            <div class="counter-number">{{reportsDetailsInactive.cantidad}}</div>
        </div>
        
      </div>
        <p></p> 
          
      </div>
      
      <div class="info-card info-card-2 team-overview">
        <p >Team Performance Overview</p>
        {{> graph 
                workload=closedResponses.[0].valorRespuesta
                health=closedResponses.[1].valorRespuesta 
                recognition=closedResponses.[2].valorRespuesta
                emotionalHealth=closedResponses.[3].valorRespuesta
                workLifeBalance=closedResponses.[4].valorRespuesta
                className="chart-container report"
                }} 
      </div>
      
      <div class="info-card info-card-3">
        <h3>Administrative offenses in the year</h3>
        <div class="employee-counters">
          <div class="counter-box inactive-counter">
            <div class="counter-label"></div>
            <div class="counter-number">{{aoYear.cantidad}}</div>
          </div>
        </div>

      </div>
      
      <div class="info-card info-card-4">
        <h3>Employee turnover last 6 months</h3>
        <p style="text-align: center; font-size:x-large">{{primedioGeneral}}%</p>
        <div style="text-align: center;">
          <button class="button is-link" onclick="abrirModal()" >check rotation from 6 months ago</button>
        </div>
      </div>
      <!-- Modal -->
      <div id="modalGrafica" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%;
        background-color: rgba(0, 0, 0, 0.658); justify-content: center; align-items: center; z-index: 1000;">
        
        <div style="background: #131A26; padding: 20px; border-radius: 10px; width: 90%; max-width: 800px; height: auto; position: relative;">
          <button style="position: absolute; top: 10px; right: 10px;" onclick="cerrarModal()">✖</button>
          
          <h3 style="text-align:center;">Employee Turnover Chart</h3>
          <div style="height: 500px; width: 100%;">
            <canvas id="miGrafico"></canvas>
          </div>
        </div>
      </div>
    
    
  </div>
  
      

  <script src="/js/graph.js"></script>
  <script src="/js/one.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      // Estos valores serán reemplazados por tus datos reales
      const activos = {{{activosPorMes}}};
      const inactivos = {{{inactivosPorMes}}};
      
      new Chart("estadoUsuariosChart", {
        type: "bar",
        data: {
          labels: ["Ene", "Feb", "Mar", "Abr", "May", "Jun", "Jul", "Ago", "Sep", "Oct", "Nov", "Dic"],
          datasets: [
            {
              label: "Hired Collaborators",
              backgroundColor: "#4CAF50",
              data: activos,
              borderRadius: 5,
              borderSkipped: false
            },
            {
              label: "Terminated Collaborators",
              backgroundColor: "#F44336",
              data: inactivos,
              borderRadius: 5,
              borderSkipped: false
            }
          ]
        },
        options: {
          responsive: true,
          maintainAspectRatio: true,
          plugins: {
              legend: {
                position: 'top',
                labels: {
                    boxWidth: 12,
                    usePointStyle: true,
                    padding: 20,
                    color: '#FFFFFF'
                }
              },
              title: {
                display: true,
                text: "Monthly New Hires and Terminations",
                font: {
                    size: 15,
                    weight: 'bold',
                },
                color: '#FFFFFF'
              },
              datalabels: {
                display: true,
                color: '#FFFFFF',
                anchor: 'end',
                align: 'top',
                offset: 0,
                font: {
                  size: 11,
                  weight: 'bold'
                },
                formatter: function(value) {
                  return value + '%';
                }
              }
          },
          scales: {
            y: {
              beginAtZero: true,
              grid: {
                color: 'rgba(255, 255, 255, 0.1)'
              },
              ticks: {
                color: '#FFFFFF',
                callback: function(value) {
                  return value + '%';
                }
              }
            },
            x: {
              grid: {
                display: false
              },
              ticks: {
                color: '#FFFFFF'
              }
            }
          },
          elements: {
            bar: {
              borderWidth: 1,
              borderRadius: {
                topLeft: 5,
                topRight: 5,
              },
              borderSkipped: false
            }
          }
        },
        plugins: [ChartDataLabels]
      });
    });

   function abrirModal() {
     document.getElementById('modalGrafica').style.display = 'flex';
     if (!window.chartGenerado) {
       generarGrafica();
       window.chartGenerado = true;
     }
   }
 
   function cerrarModal() {
     document.getElementById('modalGrafica').style.display = 'none';
   }
 
   function generarGrafica() {
     const labels = {{{mesYear}}};
     const data = {{{indice}}};
 
     const ctx = document.getElementById('miGrafico').getContext('2d');
     new Chart(ctx, {
       type: 'bar',
       data: {
         labels: labels,
         datasets: [{
           label: 'Employee Turnover Rate',
           data: data,
           backgroundColor: 'rgba(74, 108, 247, 0.8)',
           borderColor: 'rgba(74, 108, 247, 1)',
           borderWidth: 2,
           borderRadius: 6,
           barPercentage: 0.9,
           categoryPercentage: 0.9
         }]
       },
       options: {
         responsive: true,
         maintainAspectRatio: false,
         layout: {
           padding: {
             top: 35,
             right: 25,
             bottom: 45,
             left: 25
           }
         },
         plugins: {
           legend: {
             display: true,
             position: 'top',
             align: 'center',
             labels: {
               color: '#fff',
               font: {
                 size: 13,
                 family: "'Segoe UI', sans-serif"
               },
               padding: 20
             }
           },
           title: {
             display: true,
             text: 'Monthly Employee Turnover Rate',
             color: '#fff',
             font: {
               size: 16,
               family: "'Segoe UI', sans-serif",
               weight: '600'
             },
             padding: {
               top: 10,
               bottom: 30
             }
           },
           datalabels: {
             display: true,
             anchor: 'end',
             align: 'top',
             offset: 10,
             color: '#fff',
             font: {
               size: 12,
               weight: '600',
               family: "'Segoe UI', sans-serif"
             },
             formatter: function(value) {
               return value + '%';
             }
           }
         },
         scales: {
           y: {
             beginAtZero: true,
             grid: {
               color: 'rgba(255, 255, 255, 0.1)',
               drawBorder: false
             },
             ticks: {
               callback: function(value) {
                 return value + '%';
               },
               stepSize: 5,
               color: 'rgba(255, 255, 255, 0.7)',
               font: {
                 size: 12,
                 family: "'Segoe UI', sans-serif"
               },
               padding: 10
             }
           },
           x: {
             grid: {
               display: false,
               drawBorder: false
             },
             ticks: {
               color: 'rgba(255, 255, 255, 0.7)',
               font: {
                 size: 12,
                 family: "'Segoe UI', sans-serif"
               },
               padding: 10,
               autoSkip: false,
               maxRotation: 45,
               minRotation: 45
             }
           }
         }
       },
       plugins: [ChartDataLabels]
     });
   }
  </script>
</body>
</html>