<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="/css/departament.css">
</head>
<body>
    <div class="top-container">
        <nav class="nav-bar">
            <div class="first-container">
                <div class="views">Views</div>
                <div class="search-container">
                    <input type="text" placeholder="Search..." class="input-search">
                    <i class="fa-solid fa-magnifying-glass search-icon"></i>
                </div>
            </div>
            <div class="second-container">
                <div class="notification">
                    <i class="fa-solid fa-bell"></i>
                </div>
                <div class="perfil">
                    <i class="fa-solid fa-user"></i>
                </div>
            </div>
        </nav>
    </div>

    <div class="content">
        <div class="nav-content">
            <h2>Departament Management</h2>
            <input type="button" value="Add Dept" class="add-btn" id="openModal">
        </div>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Department Name</th>
                    <th>Description</th>
                    <th>State</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each datos}}
                <tr>
                    <td>{{idDepartamento}}</td>
                    <td>{{Nombre_departamento}}</td>
                    <td>{{Descripcion}}</td>
                    <td><span class="{{#if Estado}}active{{else}}inactive{{/if}}">{{#if Estado}}Active{{else}}Inactive{{/if}}</span></td>
                    <td>
                        <div class="dropdown">
                            <button class="action-btn">Actions</button>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
     <div id="modal" class="modal hidden">
        <div class="modal-content">
            <!-- Botón de cerrar -->
            <button id="closeModal" class="close-btn">✖</button>

            <h2 class="title-modal">Add Departament</h2>
            <p class="description">Fill in the required details to recall this Departament</p>

            <!-- Campos -->
            <div class="form-group">
                <label>Departament Name</label>
                <input type="text" placeholder="Finance" class="text-modal">
            </div>

            <div class="form-group">
                <label>Description</label>
                <input type="text" placeholder="Manage Financial Operations" class="text-modal">
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label>Departament Number</label>
                    <input type="text" placeholder="101" class="text-modal">
                </div>
                <div class="form-group">
                    <label>Estatus</label>
                    <input type="text" placeholder="Active" class="text-modal">
                </div>
            </div>

            <!-- Botón de enviar -->
            <button class="btn-submit">Add Departament</button>
        </div>
    </div>

    </div>


    <script src="/js/addDepartament.js"></script>
</body>
</html>
